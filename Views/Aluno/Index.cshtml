@model IEnumerable<ProjetoFinal.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum aluno cadastrado.</p>
} 
else 
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prontuário</th>
                <th>Nome</th>
                <th>Turma</th>
                <th>Curso</th>
                <th>Período</th>                
            </tr>
        </thead>

        <tbody>
            @foreach(var aluno in Model)
            {
                <tr>
                    <td>@aluno.Id</td>
                    <td>@aluno.Prontuario</td>
                    <td>@aluno.Nome</td>
                    <td>@aluno.Turma</td>
                    <td>@aluno.Curso</td>
                    <td>@aluno.Periodo</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Aluno" asp-action="Show" asp-route-id="@aluno.Id">Ver</a> 
                        <a class="btn btn-outline-danger" asp-controller="Aluno" asp-action="Delete" asp-route-id="@aluno.Id">Deletar</a>
                        <a class="btn btn-outline-warning" asp-controller="Aluno" asp-action="Update" asp-route-id="@aluno.Id">Atualizar</a>                      
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-outline-success" asp-controller="Aluno" asp-action="Create">Adicionar</a>
    
}
