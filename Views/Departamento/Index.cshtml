@model IEnumerable<ProjetoFinal.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum departamento cadastrado.</p>
    <a class="btn btn-outline-success" asp-controller="Departamento" asp-action="Create">Adicionar</a>
} 
else 
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sigla</th>
                <th>Descrição</th>
                <th>Bloco</th>   
                <th>Telefone</th>   
                <th>E-mail</th>                
            </tr>
        </thead>

        <tbody>
            @foreach(var departamento in Model)
            {
                <tr>
                    <td>@departamento.Id</td>
                    <td>@departamento.Nome</td>
                    <td>@departamento.Sigla</td>
                    <td>@departamento.Descricao</td>
                    <td>@departamento.Bloco</td>
                    <td>@departamento.Telefone</td>
                    <td>@departamento.Email</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Departamento" asp-action="Show" asp-route-id="@departamento.Id">Ver</a> 
                        <a class="btn btn-outline-warning" asp-controller="Departamento" asp-action="Update" asp-route-id="@departamento.Id">Atualizar</a> 
                        <a class="btn btn-outline-danger" asp-controller="Departamento" asp-action="Delete" asp-route-id="@departamento.Id">Deletar</a>
                                             
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-outline-success" asp-controller="Departamento" asp-action="Create">Adicionar</a>
    
}